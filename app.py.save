from flask import Flask, jsonify
import boto3

app = Flask(__name__)
dynamodb = boto3.resource('dynamodb')
table = dynamodb.Table('IoTData')

@app.route('/data', methods=['GET'])
def get_data():
    response = table.scan()
    items = response['Items']
    return jsonify(items)

